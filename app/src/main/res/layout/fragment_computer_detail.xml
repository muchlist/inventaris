<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragment.ComputerDetailFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_baseline_cancel_24px"
                    android:id="@+id/iv_detail_back"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:contentDescription="@string/dot"/>

                <TextView
                    android:id="@+id/tv_detail_client_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/grey_80"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_detail_back"
                    tools:text="MUCHLIS SIMALAKA MALAKA" />

                <TextView
                    android:id="@+id/tv_detail_hostname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/quicksand"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_detail_client_name"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/textView5"
                    tools:text="10suk-005pc" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_ip_address"
                    android:fontFamily="@font/quicksand"
                    tools:text="10.10.3.99"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@+id/textView6"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:textStyle="bold"
                    android:background="@color/button_color_second" android:textColor="@android:color/white"
                    android:paddingStart="4dp" android:paddingEnd="4dp"/>

                <TextView
                    android:id="@+id/tv_detail_no_inventory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/quicksand"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_detail_client_name"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/textView7"
                    tools:text="2018-SPT-BTW" />
                <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline3"
                    app:layout_constraintGuide_percent="0.4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_branch"
                    android:fontFamily="@font/quicksand"
                    tools:text="Sampit"
                    android:textAlignment="viewEnd" android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:textStyle="bold" android:background="@color/button_color_second"
                    android:textColor="@android:color/white" android:paddingStart="4dp" android:paddingEnd="4dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_division"
                    android:fontFamily="@font/quicksand"
                    android:textAlignment="viewEnd"
                    tools:text="Keuangan" android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@+id/textView3"
                    app:layout_constraintBottom_toBottomOf="@+id/textView3"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_location"
                    android:fontFamily="@font/quicksand"
                    android:textAlignment="textStart"
                    tools:text="Trisakti" android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@+id/textView4"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_full_pc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/grey_80"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_detail_client_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_location"
                    tools:text="KOMPUTER - LENOVO - 2019" />
                <TextView
                    android:text="@string/seat_management_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10" app:layout_constraintStart_toStartOf="@+id/tv_detail_full_pc"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_full_pc"
                    android:fontFamily="@font/quicksand" android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_seat_manajemen"
                    app:layout_constraintTop_toTopOf="@+id/textView10"
                    app:layout_constraintBottom_toBottomOf="@+id/textView10"
                    app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginStart="16dp"
                    tools:text="true" android:fontFamily="@font/quicksand" android:textSize="18sp"
                    android:textStyle="bold" android:background="@color/button_color_second"
                    android:textColor="@android:color/white" android:paddingStart="4dp" android:paddingEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_os"
                    tools:text="Windows 10 32 Bit"
                    app:layout_constraintTop_toTopOf="@+id/textView21"
                    app:layout_constraintBottom_toBottomOf="@+id/textView21" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/quicksand" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"/>
                <TextView
                    android:text="@string/prosessor_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13" app:layout_constraintStart_toStartOf="@+id/tv_detail_full_pc"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_detail_os"
                    android:fontFamily="@font/quicksand" android:textSize="18sp" android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_prosessor"
                    app:layout_constraintTop_toTopOf="@+id/textView13"
                    app:layout_constraintBottom_toBottomOf="@+id/textView13"
                    android:layout_marginStart="8dp"
                    tools:text="Setara i5" android:fontFamily="@font/quicksand" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"/>
                <TextView
                    android:text="@string/ram_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15" app:layout_constraintStart_toStartOf="@+id/tv_detail_full_pc"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" android:fontFamily="@font/quicksand"
                    android:textSize="18sp" android:maxLines="1" android:ellipsize="end"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_ram"
                    app:layout_constraintTop_toTopOf="@+id/textView15"
                    app:layout_constraintBottom_toBottomOf="@+id/textView15"
                    tools:text="4 GB" android:fontFamily="@font/quicksand" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/harddisk_"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/tv_detail_full_pc"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_hardisk"
                    app:layout_constraintTop_toTopOf="@+id/textView17"
                    app:layout_constraintBottom_toBottomOf="@+id/textView17"
                    tools:text="1000 GB" android:fontFamily="@font/quicksand" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"/>

                <TextView
                    android:text="@string/os_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21" app:layout_constraintStart_toStartOf="@+id/tv_detail_full_pc"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" android:fontFamily="@font/quicksand"
                    android:textSize="18sp" android:maxLines="1" android:ellipsize="end"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"/>

                <TextView
                    android:id="@+id/tv_detail_note"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="48dp"
                    android:fontFamily="@font/quicksand"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    tools:text="NOTE NOTE NOTE" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/status_dot"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/tv_detail_full_pc"
                    app:layout_constraintTop_toBottomOf="@+id/textView17" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_status"
                    app:layout_constraintTop_toTopOf="@+id/textView"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    tools:text="Baik" android:fontFamily="@font/quicksand" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    android:textStyle="bold" android:background="@color/button_color_second"
                    android:textColor="@android:color/white" android:paddingStart="4dp" android:paddingEnd="4dp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/cabang_"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_no_inventory" />
                <TextView
                    android:text="@string/divisi_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="@+id/textView2" android:fontFamily="@font/quicksand"
                    android:textSize="18sp" android:maxLines="1" android:ellipsize="end"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"/>
                <TextView
                    android:text="@string/lokasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    android:fontFamily="@font/quicksand" android:textSize="18sp" android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"/>
                <TextView
                    android:text="@string/host"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/tv_detail_client_name"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_client_name"
                    android:fontFamily="@font/quicksand" android:textSize="18sp" android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/ip"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/tv_detail_client_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_hostname" />
                <TextView
                    android:text="@string/no_invent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6" android:fontFamily="@font/quicksand"
                    android:textSize="18sp" android:maxLines="1" android:ellipsize="end"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"/>

                <Button
                    android:id="@+id/bt_detail_delete_computer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red_400"
                    android:fontFamily="@font/roboto"
                    android:text="Hapus Komputer"
                    app:layout_constraintEnd_toEndOf="@+id/tv_detail_client_name"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_detail_client_name"
                    app:layout_constraintTop_toBottomOf="@+id/bt_detail_edit_computer" />

                <Button
                    android:id="@+id/bt_detail_edit_computer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|end"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/button_color_second"
                    android:fontFamily="@font/roboto"
                    android:text="@string/edit_komputer"
                    app:layout_constraintEnd_toEndOf="@+id/tv_detail_client_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_detail_client_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_note" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</layout>