<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragment.ComputerDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/iv_detail_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:contentDescription="@string/dot"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_baseline_cancel_24px" />

                    <TextView
                        android:id="@+id/tv_detail_header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="@string/loading_caps"
                        android:textColor="@color/grey_80"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_detail_back" />

                    <TableLayout
                        android:id="@+id/table_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_detail_header"
                        app:layout_constraintStart_toStartOf="@+id/tv_detail_header"
                        app:layout_constraintTop_toBottomOf="@+id/tv_detail_header">

                        <TableRow>

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/ip"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_detail_ip_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/loading"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/no_invent"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_detail_no_inventory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksand"
                                android:textSize="18sp"
                                tools:text="2018-SPT-BTW" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/cabang_"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_detail_branch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/loading"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:text="Sampit" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/lokasi"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_detail_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/loading"
                                android:textSize="18sp"
                                tools:text="Trisakti" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="Tipe-merk"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_merk_tipe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/loading"
                                android:textSize="18sp"
                                tools:text="Fixed Hixvision" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="Tahun"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_tahun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/loading"
                                android:textSize="18sp"
                                tools:text="2020" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="Koneksi"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_last_ping"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksand"
                                android:textSize="18sp"
                                tools:text="DOWN" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand"
                                android:text="@string/status_dot"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_detail_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/quicksand"
                                android:maxLines="3"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </TableRow>

                    </TableLayout>

                    <TextView
                        android:id="@+id/tv_detail_note"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="48dp"
                        android:fontFamily="@font/quicksand"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_detail_header"
                        app:layout_constraintTop_toBottomOf="@+id/cardView"
                        tools:text="NOTE NOTE NOTE" />

                    <ImageView
                        android:id="@+id/iv_detail_load"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:src="@drawable/ic_sync_24px"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/table_detail" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="64dp"
                        app:dividerDrawableHorizontal="@drawable/divider"
                        app:flexWrap="wrap"
                        app:justifyContent="space_evenly"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/tv_detail_header"
                        app:layout_constraintStart_toStartOf="@+id/tv_detail_header"
                        app:layout_constraintTop_toBottomOf="@+id/tv_detail_note"
                        app:showDivider="middle">

                        <ImageView
                            android:id="@+id/iv_detail_delete"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            tools:srcCompat="@drawable/deletedocument64" />

                        <ImageView
                            android:id="@+id/iv_detail_deactive"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            tools:srcCompat="@drawable/icons8_remove" />

                        <ImageView
                            android:id="@+id/iv_detail_edit"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            tools:srcCompat="@drawable/editproperty64" />

                        <ImageView
                            android:id="@+id/iv_detail_add_history"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            tools:srcCompat="@drawable/addproperty64" />


                    </com.google.android.flexbox.FlexboxLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:layout_constraintDimensionRatio="w,4:3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineChart">

                        <ImageView
                            android:id="@+id/iv_detail_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:srcCompat="@drawable/ic_undraw_folder_x4ft" />

                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_deactive_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="false"
            android:background="#FFAB91"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Unit Status Nonaktif"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>
</layout>