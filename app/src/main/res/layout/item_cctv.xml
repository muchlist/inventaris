<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    android:elevation="1dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cctvlist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="3"
            android:singleLine="false"
            android:textColor="@color/grey_60"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Muchlisin Naga Bonar sinaga burak burak" />

        <TextView
            android:id="@+id/tv_cctvlist_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_rounded_ip"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@+id/tv_cctvlist_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_cctvlist_name"
            tools:text="10.10.3.99" />

        <TextView
            android:id="@+id/tv_cctvlist_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@+id/tv_cctvlist_condition"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="@+id/tv_cctvlist_name"
            tools:text="Keuangan" />

        <TextView
            android:id="@+id/tv_cctvlist_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_rounded_seat"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="b" />

        <TextView
            android:id="@+id/tv_cctvlist_last_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="3"
            android:singleLine="false"
            app:layout_constraintEnd_toStartOf="@+id/tv_cctvlist_condition"
            app:layout_constraintStart_toStartOf="@+id/tv_cctvlist_location"
            app:layout_constraintTop_toBottomOf="@+id/tv_cctvlist_location"
            tools:text="Tertembak petir" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>